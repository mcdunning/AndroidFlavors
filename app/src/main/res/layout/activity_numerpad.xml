<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".widget.Numberpad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/numberpad_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/main_view"
        app:layout_constraintEnd_toEndOf="@id/main_view"
        app:layout_constraintBottom_toBottomOf="@id/main_view"
        app:layout_constraintStart_toStartOf="@id/main_view"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintWidth_percent=".3
">

        <TextView
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="50dp"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:text="0.0"
            android:gravity="center|end"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/numberpad_container"
            app:layout_constraintEnd_toStartOf="@id/backspace"
            app:layout_constraintBottom_toTopOf="@id/seven"
            app:layout_constraintStart_toStartOf="@id/numberpad_container"
            app:layout_constraintWidth_percent=".60"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/value"
            app:layout_constraintEnd_toEndOf="@id/numberpad_container"
            app:layout_constraintBottom_toBottomOf="@id/value"
            app:layout_constraintStart_toEndOf="@id/value"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/value"
            app:layout_constraintEnd_toStartOf="@id/eight"
            app:layout_constraintBottom_toTopOf="@id/four"
            app:layout_constraintStart_toStartOf="@id/value"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/seven"
            app:layout_constraintEnd_toStartOf="@id/nine"
            app:layout_constraintBottom_toBottomOf="@id/seven"
            app:layout_constraintStart_toEndOf="@id/seven"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/seven"
            app:layout_constraintEnd_toEndOf="@id/backspace"
            app:layout_constraintBottom_toBottomOf="@id/seven"
            app:layout_constraintStart_toEndOf="@id/eight"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/seven"
            app:layout_constraintEnd_toStartOf="@id/five"
            app:layout_constraintBottom_toTopOf="@id/one"
            app:layout_constraintStart_toStartOf="@id/seven"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/four"
            app:layout_constraintEnd_toStartOf="@id/six"
            app:layout_constraintBottom_toBottomOf="@id/four"
            app:layout_constraintStart_toEndOf="@id/four"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/four"
            app:layout_constraintEnd_toEndOf="@id/nine"
            app:layout_constraintBottom_toBottomOf="@id/four"
            app:layout_constraintStart_toEndOf="@id/five"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/four"
            app:layout_constraintEnd_toStartOf="@id/two"
            app:layout_constraintBottom_toTopOf="@id/decimal_point"
            app:layout_constraintStart_toStartOf="@id/four"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/one"
            app:layout_constraintEnd_toStartOf="@id/three"
            app:layout_constraintBottom_toBottomOf="@id/one"
            app:layout_constraintStart_toEndOf="@id/one"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/one"
            app:layout_constraintEnd_toEndOf="@id/six"
            app:layout_constraintBottom_toBottomOf="@id/one"
            app:layout_constraintStart_toEndOf="@id/two"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/decimal_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/one"
            app:layout_constraintEnd_toStartOf="@id/zero"
            app:layout_constraintBottom_toBottomOf="@id/numberpad_container"
            app:layout_constraintStart_toStartOf="@id/one"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/decimal_point"
            app:layout_constraintEnd_toStartOf="@id/submit"
            app:layout_constraintBottom_toBottomOf="@id/decimal_point"
            app:layout_constraintStart_toEndOf="@id/decimal_point"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/decimal_point"
            app:layout_constraintEnd_toEndOf="@id/three"
            app:layout_constraintBottom_toBottomOf="@id/decimal_point"
            app:layout_constraintStart_toEndOf="@id/zero"
            app:layout_constraintWidth_percent=".30"
            app:layout_constraintHeight_percent=".15"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>