<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flavor_name_title"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".1"/>

    <TextView
        android:id="@+id/textView1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_1_label"
        android:gravity="center"
        android:paddingBottom="10dp"
        app:layout_constraintRight_toRightOf="@id/textView1Value"
        app:layout_constraintBottom_toTopOf="@id/textView1Value"
        app:layout_constraintLeft_toLeftOf="@id/textView1Value"/>

    <TextView
        android:id="@+id/textView1Value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_title"
        app:layout_constraintRight_toLeftOf="@id/textView2Value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintDimensionRatio="V, 1:1"
        app:layout_constraintVertical_bias=".45"/>

    <TextView
        android:id="@+id/textView2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_2_label"
        android:gravity="center"
        android:paddingBottom="10dp"
        app:layout_constraintRight_toRightOf="@id/textView2Value"
        app:layout_constraintBottom_toTopOf="@id/textView2Value"
        app:layout_constraintLeft_toLeftOf="@id/textView2Value"/>

    <TextView
        android:id="@+id/textView2Value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/textView1Value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textView1Value"
        app:layout_constraintLeft_toRightOf="@id/textView1Value"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintDimensionRatio="1:1"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/submit"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView1Value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintDimensionRatio="V, 1:.5"
        app:layout_constraintVertical_bias=".85"/>
</androidx.constraintlayout.widget.ConstraintLayout>